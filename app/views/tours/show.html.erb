<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @tour.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @tour.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @tour.price %>
</p>

<p>
  <strong>Days:</strong>
  
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Distance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tour.days.each do |day| %>
      <tr>
        <td><%= day.date %></td>
        <td><%= day.description %></td> 
        <td><%= day.distance %></td>   
        <td><%= link_to 'Show', day %></td>
        <td><%= link_to 'Edit', edit_day_path(day) %></td>
        <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</p>



<%= link_to 'Edit', edit_tour_path(@tour) %> |
